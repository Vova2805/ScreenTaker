<div class="row-fluid">
    <div class="col-sm-4" style="padding:5px;">
        <div class="row" style="margin-bottom:10px;">
            <div class="col-sm-12">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Group name" aria-describedby="sizing-addon2" id="GroupNameInput">
                    <span class="input-group-addon btn btn-default" aria-label="Left Align" id="sizing-addon2"
                          onclick=
                          "$.ajax({
                                url: 'CreateGroup',
                                data: {
                                    name: document.getElementById('GroupNameInput').value,
                                },
                                success: function (data) {
                                    $('#dynamicArea').html(data);
                                }
                            });"                         
                          >+</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="list-group" style="height:auto;max-height:450px;overflow:auto;">
                    @if (ViewBag.Groups != null)
                    {
                        for (int i = 0; i < ViewBag.Groups.Count; i++)
                        {
                            string itemClass = "list-group-item";
                            if (ViewBag.Groups[i].Id == ViewBag.selectedId)
                            {
                                itemClass += " active";
                            }
                            <div class="@itemClass" onclick=
                            "$.ajax({
                            url: 'Partial_GroupsAndEmails',
                            data: {
                            selectedId: @ViewBag.Groups[i].Id,
                            },
                            success: function (data) {
                            $('#dynamicArea').html(data);
                            }});">
                                <div class="media-body" style="vertical-align:middle">
                                    <h5 class="media-heading">@ViewBag.Groups[i].Name</h5>
                                </div>
                                <div class="media-right" style="vertical-align:middle;">
                                    <button type="button" class="btn badge right" aria-label="Left Align">
                                        <span aria-hidden="true">@ViewBag.GroupMemberCounts[i]</span>
                                    </button>
                                </div>
                                <div class="media-right" style="vertical-align:middle;"
                                     onclick=
                                     "if(event.stopPropagation){event.stopPropagation();}event.cancelBubble=true;                                       
                                        $.ajax({
                                            url: 'RemoveGroup',
                                            data: {
                                                selectedId: @ViewBag.Groups[i].Id,
                                            },
                                            success: function (data) {
                                                $('#dynamicArea').html(data);
                                            }
                                        });">
                                    <button type="button" class="btn badge right" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-remove glyphicon-th-large" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

        </div>
    </div>
    <div class="col-sm-8" style="padding:5px;">
        <div class="row" style="margin-bottom:10px;">
            <div class="col-sm-12">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Email" aria-describedby="sizing-addon2" id="AddUserInput">
                    <span class="input-group-addon btn btn-default" aria-label="Left Align" id="sizing-addon2"
                          onclick="$.ajax({
                                        url: 'AddUser',
                                        data: {
                                            selectedId: @ViewBag.SelectedId,
                                            email: document.getElementById('AddUserInput').value,
                                        },
                                        success: function (data) {
                                            $('#dynamicArea').html(data);
                                        }
                                    });">+</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="list-group respo" style="height:auto;max-height:450px;overflow:auto;">
                    @if (ViewBag.Emails != null)
                    {
                        for (int i = 0; i < ViewBag.Emails.Count; i++)
                        {
                            <div class="list-group-item">
                                <div class="media-left">
                                    <img class="media-object" style="width:50px;height:50px;" src="~/Resources/images/user.png" alt="Image not found">
                                </div>
                                <div class="media-body" style="vertical-align:middle">
                                    <h4 class="media-heading">@ViewBag.Emails[i]</h4>
                                </div>
                                <div class="media-right" style="vertical-align:middle"
                                     onclick="$.ajax({
                                            url: 'RemoveUser',
                                            data: {
                                                selectedId: @ViewBag.SelectedId,
                                                email: '@ViewBag.Emails[i]',
                                            },
                                            success: function (data) {                                                
                                                $('#dynamicArea').html(data);
                                            }
                                        });">                                   
                                    <button type="button" class="btn badge right" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-remove glyphicon-th-large" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {   
    <script>
    $(document).ajaxStart(function () {
        $('#loadingAnimation').show();
    });
    $(document).ajaxStop(function () {
        $('#loadingAnimation').hide();
    });
    </script>
}
