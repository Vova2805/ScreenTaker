
@{
    ViewBag.Title = "Confirm Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = ViewBag.Localize ?? "en";
    }
}    

<div class="container account-form">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4 account-style shadow center-block">
            <section id="emailConfirm">
                <div class="col-sm-12 text-center center-block">
                    <div class="row text-center" style="margin-top: 5px">
                        <img src="~/Resources/email.png" />
                    </div>
                    <h4>Thank you for confirming your email</h4>
                    <hr/>
                    <div class="text-center">
                        <h4>
                            @Html.ActionLink("Return to Log in", "Login", "Account", new {@class = "account-link"})
                        </h4>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

