
@{
    ViewBag.Title = "Confirm Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = ViewBag.Localize ?? "en";
    }
}
@section Scripts {
    <script>
        $('#loadingAnimation').css('visibility', 'hidden');
    function ShowProgress() {
        setTimeout(function () {
            $('#loadingAnimation').css('visibility', 'visible');
        }, 200);
    }
    $('form').live("submit", function () {
        ShowProgress();
    });
    </script>
}
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="padding:1%;align-items:center;margin-top:3%;margin-bottom:3%;border-radius:20px;background-color:#9d9d9d">
            <div class="preloader" id="loadingAnimation"  style="visibility:hidden">
                <div class="sk-cube-grid preloader-center center-block">
                    <div class="sk-cube sk-cube1"></div>
                    <div class="sk-cube sk-cube2"></div>
                    <div class="sk-cube sk-cube3"></div>
                    <div class="sk-cube sk-cube4"></div>
                    <div class="sk-cube sk-cube5"></div>
                    <div class="sk-cube sk-cube6"></div>
                    <div class="sk-cube sk-cube7"></div>
                    <div class="sk-cube sk-cube8"></div>
                    <div class="sk-cube sk-cube9"></div>
                </div>
            </div>
            <button  type="button" class="closebtn pull-right" onclick="location.href='/Account/Login'"
                     style="font-size:50px;background-color:transparent;border:2px;width:70px; height:70px;margin-right:2%;margin-top:-1%">×</button>
            <div class="row center-block" style="margin-top:10%;">
                <div class="col-sm-12">
                    <div class="row text-center">
                        <img src="~/Resources/email.png" style="max-width: 800px; max-height: 600px" />
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="text-md-center">
                                    <h3 class="text-center">@Resources.Resource.CONFIRMATION</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2"></div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="text-md-center">
                                    <p class="text-center">
                                        @Resources.Resource.HAVE_SENT <a href="#">@ViewBag.Email</a> @Resources.Resource.TO_CONFIRM
                                    </p>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="text-md-center">
                                    <p class="text-center">
                                        @Resources.Resource.IF_NOT_GOT <a href="@Url.Action("ConfirmEmail", "Account")" onclick="$('#loadingAnimation').css('visibility','visible')" style="font-size:14px; text-decoration: none"><b>@Resources.Resource.RESEND_AGAIN</b></a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    

<h2>@ViewBag.Title.</h2>
<div>
    <p>
        Thank you for confirming your email. Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink"})
    </p>
</div>

