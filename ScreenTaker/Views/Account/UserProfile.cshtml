@{
    ViewBag.Title = "Profile";
}

<br/>
<div class="col-md-12">
    <div class="col-md-3"></div>
    <div class="col-md-6 account-style shadow">
        <div class="col-md-12" style="padding-top: 30px">
            <div class="col-md-3">
                <img src="~/img/user.png" class="profile-avatar"/>
            </div>
            <div class="col-md-9 text-center">
                <a class="account-link"><h4>Change your profile picture</h4></a>
            </div>
        </div>
        <br/>
        <div class="col-md-12">
            <div class="col-md-6 text-left">
                <h4>Email: @ViewBag.Email</h4>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-default account-button">Manage groups</button>
            </div>
        </div>
        <div>
            @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new {@class = "form-horizontal text-left", @style = "padding-left: 30px", role = "form"}))
            {
                @Html.ValidationSummary("", new {@class = "text-danger"})
                <div class="form-group" style="padding-left: 15px">
                    <label>Your old password</label>
                    <div>
                        <input type="password" class="col-md-4" placeholder=""/>
                    </div>
                </div>
                <div class="form-group" style="padding-left: 15px">
                    <label>Enter a new password</label>
                    <div>
                        <input type="password" class="col-md-4" placeholder=""/>
                    </div>
                </div>
                <div class="form-group" style="padding-left: 15px">
                    <label>Confirm a new password</label>
                    <div>
                        <input type="password" class="col-md-4" placeholder=""/>
                    </div>
                </div>
                <div class="form-group" style="padding-bottom: 10px">
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-default account-button" value="Change password"/>
                    </div>
                </div>
            }
        </div>
    </div>
</div>