@using ScreenTaker.Models
@{
    ViewBag.Title = "Profile";
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = ViewBag.Localize ?? "en";
    }
}

<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4 account-style shadow center-block">
            <div style="padding-top: 15px">
                <div class="col-sm-12 text-center" id="dynamicArea">
                    <img src="@ViewBag.Avatar_128" class="profile-avatar"/>
                </div>
                <div class="col-sm-12 text-center" style="margin-top: -15px">

                    @*onclick=
                                                       "$.ajax({
                                url: 'SetAvatar',
                                data: {
                                    name: document.getElementById('GroupNameInput').value,
                                },
                                success: function (data) {
                                    $('#dynamicArea').html(data);
                                }
                            });">*@

                    @using (Html.BeginForm("SetAvatar", "Account", FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <input id="fileInput" style="visibility: collapse; z-index: 100" type="file" name="file" onchange="document.getElementById('fileSubmit').click();"/>
                        <input id="fileSubmit" style="visibility: collapse; z-index: 100" type="submit" value="bla"/>
                        <a class="account-link" onclick="document.getElementById('fileInput').click();" style="margin-left: -40px"> @Resources.Resource.CHANGE_PROFILE_IMG</a>
                    }
                </div>
            </div>
            <br/>
            <div class="col-sm-12">
                <div class="text-left">
                    <h4>@Resources.Resource.EMAIL : @ViewBag.Email</h4>
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-block btn-lg account-button" style="width: 100%" onclick="location = '/Edit/UserGroups'">@Resources.Resource.MANAGE_GROUPS</button>
                </div>
            </div>
                @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new {@class = "col-md-12 text-left form-horizontal", role = "form"}))
                {
                    @Html.ValidationSummary("", new {@class = "text-danger"})
                    <div class="form-group">
                        <div class="col-md-12 login-signup-center">
                            <label>@Resources.Resource.YOUR_OLD_PASS</label>
                            <input type="password" class="form-control input-lg btn-not-rounded" placeholder=""/>
                            @* @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg btn-not-rounded", @placeholder = Resources.Resource.PASSWORD })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-left text-primary" }) *@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 login-signup-center">
                            <label>@Resources.Resource.ENTER_NEW_PASS</label>
                            <input type="password" class="form-control input-lg btn-not-rounded" placeholder=""/>
                            @* @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg btn-not-rounded", @placeholder = Resources.Resource.PASSWORD })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-left text-primary" }) *@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 login-signup-centers">
                            <label>@Resources.Resource.CONFIRM_PASS</label>
                            <input type="password" class="form-control input-lg btn-not-rounded" placeholder=""/>
                            @* @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg btn-not-rounded", @placeholder = Resources.Resource.PASSWORD })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-left text-primary" }) *@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 login-signup-center">
                            <input type="submit" class="btn btn-default btn-block btn-lg account-button" value="@Resources.Resource.CHANGE_PASS" />
                        </div>
                    </div>
                }
        </div>
    </div>
</div>
