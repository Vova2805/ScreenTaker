@{
    ViewBag.Title = "Profile";
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = "en";
    }
}

<div class="row" style="margin-top:20px;">
    <div class="col-md-12">
        <div class="col-md-3"></div>
        <div class="col-md-6 account-style shadow">
            <div class="col-md-12" style="padding-top: 30px">
                <div class="col-md-3">
                    <img src="~/Resources/user.png" class="profile-avatar" />
                </div>
                <div class="col-md-9 text-center">
                 
                        <a class="account-link">
                            @Resources.Resource.CHANGE_PROFILE_IMG
                        </a>
                    
                </div>
            </div>
            <br />
            <div class="col-md-12">
                <div class="col-md-6 text-left">
                    <h4>@Resources.Resource.EMAIL : @ViewBag.Email</h4>
                </div>
                <div class="col-md-6 text-right">
                    <button class="btn btn-default account-button" onclick="location='/Edit/UserGroups'">@Resources.Resource.MANAGE_GROUPS</button>
                </div>
            </div>
            <div>
                @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new { @class = "form-horizontal text-left", @style = "padding-left: 30px", role = "form" }))
            {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group" style="padding-left: 15px">
                        <label>@Resources.Resource.YOUR_OLD_PASS</label>
                        <div>
                            <input type="password" class="col-md-4" placeholder="" />
                        </div>
                    </div>
                    <div class="form-group" style="padding-left: 15px">
                        <label>@Resources.Resource.ENTER_NEW_PASS</label>
                        <div>
                            <input type="password" class="col-md-4" placeholder="" />
                        </div>
                    </div>
                    <div class="form-group" style="padding-left: 15px">
                        <label>@Resources.Resource.CONFIRM_PASS</label>
                        <div>
                            <input type="password" class="col-md-4" placeholder="" />
                        </div>
                    </div>
                    <div class="form-group" style="padding-bottom: 10px">
                        <div class="col-md-10">
                            <input type="submit" class="btn btn-default account-button" value="@Resources.Resource.CHANGE_PASS" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
