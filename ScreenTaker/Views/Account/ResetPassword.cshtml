@model ScreenTaker.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = ViewBag.Localize ?? "en";
    }
    ViewBag.ErrorTitle = Resources.Resource.USE_ACCOUNT;
}

<div class="container" style="margin-top: 20px">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4 account-style shadow center-block">
            <section id="forgotPasswordForm">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "col-md-12 text-center form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>@Resources.Resource.RESET_PASSWORD</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-left text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        <div class="col-md-12 login-signup-center">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg btn-not-rounded", placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 login-signup-center">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg btn-not-rounded", placeholder = "New password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 login-signup-center">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg btn-not-rounded", placeholder = "Confirm password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 login-signup-center">
                            <input type="submit" class="btn btn-block btn-lg btn-default btn-not-rounded account-button" value="Reset" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
