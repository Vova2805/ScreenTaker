@using ScreenTaker.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}



<div class="container" style="margin-top:40px;">
    
    <div class="row">
        <h2 class="text-center">@ViewBag.Title</h2>
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4 account-style shadow center-block" >
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col-md-12 text-center form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Use your account to log in</h4>
                        <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-left text-primary" })
                            <div class="form-group">
                                <div class="col-md-12 login-signup-center">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @style = "border-radius: 0" , @placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-left text-primary" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-md-12 login-signup-center">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @style = "border-radius: 0", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-left text-primary" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-md-12 login-signup-center">
                                    <input type="submit" value="Log in" class="btn btn-block btn-lg btn-default account-button" />
                                </div>
                            </div>
                            <div class="text-center">
                                <h4>
                                    @Html.ActionLink("Register as a new user", "Register", "Account", new { @class = "account-link" })
                                </h4>
                            </div>
                    }
                </section>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}