@using ScreenTaker.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";

    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = "en";
    }
}


<div class="container" style="margin-top:20px;">
    
    <div class="row">
        @*<h2 class="text-center">@ViewBag.Title</h2>*@
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4 account-style shadow center-block" >
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col-md-12 text-center form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>@Resources.Resource.USE_ACCOUNT</h4>
                        <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-left text-primary" })
                            <div class="form-group">
                                <div class="col-md-12 login-signup-center">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @style = "border-radius: 0" , @placeholder = Resources.Resource.EMAIL })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-left text-primary" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-md-12 login-signup-center">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @style = "border-radius: 0", @placeholder = Resources.Resource.PASSWORD })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-left text-primary" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-md-12 login-signup-center">
                                    <input type="submit" value="@Resources.Resource.LOGIN_EMAIL" class="btn btn-block btn-lg btn-default account-button" />
                                </div>
                            </div>
                            <div class="text-center">
                                <h4>
                                    @Html.ActionLink(Resources.Resource.AS_NEW_USER, "Register", "Account", new { @class = "account-link" })
                                </h4>
                            </div>
                    }
                </section>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}