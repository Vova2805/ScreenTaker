@{
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = ViewBag.Localize??"en";
    }
    //if (!ViewBag.Localize.Equals(Culture))
    //{
    //    
    //}

}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background-color: #E0E0E0; overflow-x: hidden">
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("ScreenTaker", "Welcome", "Home", new { lang = ViewBag.Locale }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    @if (Request.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink(Resources.Resource.FOLDERS,  "Library",  "Home", new
                               {
                               }, null)
                            </li>
                        </ul>
                    }

                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </header>
<section class="main-content">
    <div>
        @RenderBody()
    </div>
</section>
<footer style="z-index:200;">
    <div style="background-color: #222; margin-bottom: -20px; bottom: 0px; vertical-align: middle; height: 50px; margin-top: 20px;">
        <div class="row">
            <div class="col-sm-5">
            </div>
            <div class="col-sm-3" style="vertical-align: middle; padding-top: 15px; ; font-size: 15px">
                <span style="color: #929292">@Resources.Resource.DEVELOPED_BY</span>
                <span style="color: #3D8AF7">DREAM TEAM</span>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</body>

</html>
