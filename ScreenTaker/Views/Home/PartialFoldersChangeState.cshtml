            }
            string id = ViewBag.Folders[i].Id + "";
            string fId = ViewBag.FolderID + "";
            if (id == fId)
            {
                string a = isPublic;
            }
            <div onclick="selectFolder('@ViewBag.Folders[i].Id','@folder_id','@count','@FolderTitle.Replace("'", "&#039")','@sharedLink','@sharedCode','@imageLink','@isPublic')"
