@{
    ViewBag.Title = "Library";
}

<div class="row" style="margin-bottom: -40px; overflow: hidden; position: relative;  min-height: 600px">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="container">
            <div class="col-md-12">
                @for (int i = 0; i < ViewBag.Folders.Count; i++)
                {
                    <a href="/Home/Images">
                        <figure class="col-md-2 text-center">
                            <img src="~/Resources/images/private.png"/>
                            <figcaption class="text-center">@ViewBag.Folders[i].name</figcaption>
                        </figure>
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="col-md-2" style="background-color: #686868; height: 100%; right: 15px; position: absolute;">
        <div >
            <img src="~/Resources/images/private.png"/>
            <p style="color: #E0E0E0">@ViewBag.Folders[0].name</p>
            <hr/>
            <div>
                <button type="button" class="btn btn-default" style="width: 100%">Open</button>
            </div>
            <br/>
            <div>
                <button type="button" class="btn btn-default" style="width: 100%">Rename</button>
            </div>
            <br/>
            <div>
                <button type="button" class="btn btn-danger" style="width: 100%">Delete</button>
            </div>
            <br/>
            <div>
                <button class="btn btn-warning" style="width: 100%">Make public</button>
            </div>
            <br />
            <div>
                <button type="button" class="btn btn-default" style="width: 100%">Manage access</button>
            </div>
            <hr/>
            <p style="color: #E0E0E0">Share folder</p>
            <input class="form-control" style="width: 100%" type="text" placeholder="Sharing link" value="@ViewBag.FolderLink"/>
            <hr/>
        </div>
    </div>
</div>
<br/>