@using ScreenTaker.Models;
@{
    ViewBag.Title = "Library";
    ViewBag.CurrentFolderShCode = "-1";
}
@section Scripts
{
    <script>
        $('#toggle_event_editing button').click(function () {
            if ($(this).hasClass('locked_active') || $(this).hasClass('unlocked_inactive')) {
                /* code to do when unlocking */
                $('#switch_status').html('Switched on.');
            } else {
                /* code to do when locking */
                $('#switch_status').html('Switched off.');
            }

            /* reverse locking status */
            $('#toggle_event_editing button').eq(0).toggleClass('locked_inactive locked_active btn-default btn-info');
            $('#toggle_event_editing button').eq(1).toggleClass('unlocked_inactive unlocked_active btn-info btn-default');
        });

        function openFolder(i) {
            location.href = "/Home/Images?id=" + i;
            return false;
        }

         function selectFolder(name, sharedLinkValue,image,sharedCode) {
            document.getElementById("sharedLink").value = sharedLinkValue;
            document.getElementById("folderImage").src = image;
           
            ViewBag.CurrentFolderShCode = sharedCode;

            document.getElementById("folderTitle").innerText = ViewBag.CurrentFolderShCode;//name;
           
            return false;
         }

         function selectText() {
             document.getElementById('sharedLink').select();
         }
    </script>
}

