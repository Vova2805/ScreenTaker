            <h2>Folders</h2>
        </div>
        <div class="col-sm-2">
           
            <button id="openSideMenu" type="button" class="btn btn-default pull-right btn-not-rounded" aria-label="Left Align" style="margin-top:20px;" onclick="openNav()">
                <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
            </button>
            <button id="AddFolderButton"data-placement="bottom" title="Add new folder" type="button" class="btn-primary btn btn-default pull-right success btn-not-rounded" data-toggle="modal" data-target="#AddFolder" aria-label="Left Align" style="margin-top:20px;margin-right:-40px;background-color:cornflowerblue">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
        </div>
        <div class="row">
            <div class="col-sm-12" style="padding-left:40px;padding-right:40px;">
                @{
                    int count = ViewBag.Folders.Count;

                    for (int i = 0; i < ViewBag.Folders.Count; i++)
                    {
                        string classes = "floating-box text-center task active images folder";
                        if (i == 0)
                        {
                            classes += " active-image";
                        }
                        string folder_id = "FID" + i;
                        string link = ViewBag.BaseURL + ViewBag.Folders[i].SharedCode;
                        string sharedCode = ViewBag.Folders[i].SharedCode;
                        string imageLink = "/Resources/images/" + (ViewBag.Folders[i].IsPublic ? "public.png" : "private.png");
                        <a href="#" onclick="selectFolder('@ViewBag.Folders[i].Id','@folder_id','@count','@ViewBag.Folders[i].Name','@link','@sharedCode','@imageLink')"
                               ondblclick="openFolder('@ViewBag.Folders[i].Id')">
                            <figure class="@classes" id="@folder_id">
                                <img src="~/Resources/images/public.png" />
                                <figcaption class="text-center">@ViewBag.Folders[i].Name</figcaption>
                            </figure>
                        </a>
                    }
                }
            </div>
        </div>
    </div>
    <div class="sidenav" id="mySidenav">
        <div style="margin-left: 10px; margin-right: 10px; height: 100%;">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()" style="font-size:40px;">×</a>
