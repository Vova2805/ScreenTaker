@{
    ViewBag.Title = "SharedImage";
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = ViewBag.Localize ?? "en";
    }


}
@section Scripts {
    <script>
        $('[data-toggle="popover"]').popover()
    </script>
}

@if (ViewBag.AccessGranted)
{
    string temp = ((ViewBag.Owner != null && ViewBag.Owner.AvatarFile != null) ? (ViewBag.Owner.AvatarFile) : "user");
    string AvatarPath = ViewBag.BASE_URL + "avatars/" + temp + "_50.png";
    string OwnerEmail = ViewBag.Owner.Email;
    string image = "<img class=\"pull - left\" src=\"" + AvatarPath + "\" class=\"img-circle\" style=\"width:50px;height:50px;margin:5px;margin-left:-10px;border-radius:30px;\"/>";
    string popover_template =
    "<div class='popover' role='tooltip' style=\"width:500px;\"><div class='arrow'></div><h3 class='popover-title'></h3><div><div class=\"container-fluid\"><div class=\"row\"><div class=\"col-xs-5\">" + image + "</div> <div class=\"col-xs-7\"><a class=\"pull-left popover-content\" style=\"word-wrap: break-word;vertical-align:middle;margin-left:-55px;margin-top:10px;\"></a></div></div></div></div></div>";

    <div class="row" style="margin-top: 20px; overflow: hidden; position: relative; min-height: 100%">
        <div class="col-md-12">
            <div class="row">
                <div class="col-sm-12" style="padding-left: 40px; padding-right: 40px;">
                    <div class="row text-center">
                        <img src="@ViewBag.OriginalPath" style="max-width: 800px; max-height: 600px"  data-toggle="popover" data-trigger="hover" title="@Resources.Resource.OWNER" data-template="@popover_template" data-content="@OwnerEmail" />
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="text-md-center">
                                    @{
                                        int length = ViewBag.OriginalName.Length;
                                        int size = length <= 50 ? length : 50;
                                        string name = ViewBag.OriginalName.Substring(0, size);
                                        ViewBag.OriginalName = name;
                                    }
                                    <h3 class="text-center">@ViewBag.OriginalName</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row" style="margin-top: 20px; overflow: hidden; position: relative;">
        <div class="col-md-12">
            <div class="row">
                <div class="col-sm-12" style="padding-left: 40px; padding-right: 40px;">
                    <div class="text-md-center">
                        <h2 class="text-center">@Resources.Resource.ACCESS_DENIED</h2>
                        <p class="text-center">@Resources.Resource.ACC_DENIED_DESCR</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}