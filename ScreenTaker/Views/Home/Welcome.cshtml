
@{
    ViewBag.Title = "Welcome to ScreenTaker";
    int counter = 0;
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
    else
    {
        Culture = UICulture = "en";
    }
}


<div class="row">
    <div class="col-lg-12 col-md-9 col-sm-12">
        <div class="jumbotron container" style="padding:30px">
            <h1 class="text-color">ScreenTaker</h1>
            <p class="lead-site">@Resources.Resource.JUMBOTRON_TEXT</p>

            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    @using (Html.BeginForm("Welcome", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    { 
                        <input id="fileInput" style="visibility:collapse" type="file" name="file" onchange="document.getElementById('fileSubmit').click();" />
                        <input id="fileSubmit" style="visibility:collapse" type="submit" value="bla" />
                        <input type="button" disabled class="btn btn-primary btn-lg center-block" style="width:300px; height:70px;" value="@Resources.Resource.UPLOAD_IMAGE" onclick="document.getElementById('fileInput').click();" />
                    }
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12 col-md-9 col-sm-12">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <h2>@Resources.Resource.ABOUT_ST</h2>
                    <p>@Resources.Resource.ABOUTST_TEXT</p>
                </div>
                <div class="col-md-1">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <h2>@Resources.Resource.CAPTURING_FS</h2>
                    <p>@Resources.Resource.CAPTURING_TEXT</p>
                    <img src="~/Resources/images/printscreen.png" class="welcome-image" />
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <h2>@Resources.Resource.FEATURES</h2>
                    <p>@Resources.Resource.FEATURES_TEXT</p>
                </div>
                <div class="col-md-2">
                </div>
            </div>
        </div>
    </div>
</div>
      

